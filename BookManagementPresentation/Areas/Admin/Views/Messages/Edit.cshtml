                                <div class="col-md-12">
                                    <div class="input-group">
                                        <textarea id="Description" name="Content" rows="12" cols="80" class="form-control" placeholder="Tell us your story of event.." readonly>@Model.Content</textarea>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="form-group form-actions">
                        <div class="col-md-10 col-md-offset-5">
