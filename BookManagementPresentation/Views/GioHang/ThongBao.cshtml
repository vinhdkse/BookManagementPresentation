@{
    ViewBag.Title = "Thông Báo";
}
<section class="site-section site-section-light site-section-top themed-background-dark">
    <div class="container text-center">
        <h1 class="animation-slideDown"><strong>Hơn 5000 Quyển Sách!</strong></h1>
    </div>
</section>
<section class="site-content site-section">
    <div id="error-container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <h1><i class="fa fa-cog fa-spin text-danger"></i> Sorry</h1>
                <h2 class="h3">@ViewBag.Error</h2>
            </div>
            <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4 text-center">
                <h3><i class="fa fa-chevron-circle-left text-muted"></i> <a href="/GioHang/XemGioHang">Go Back</a></h3>
            </div>
        </div>
    </div>
</section>
<section class="site-content site-section">
    <div class="container">
        <div class="row row-items text-center">
            <div class="col-sm-3 animation-fadeIn">
                <a href="javascript:void(0)" class="circle themed-background">
                    <i class="gi gi-life_preserver"></i>
                </a>
                <h4>Open a <strong>ticket</strong></h4>
            </div>
            <div class="col-sm-3 animation-fadeIn">
                <a href="javascript:void(0)" class="circle themed-background">
                    <i class="gi gi-envelope"></i>
                </a>
                <h4><strong>Email</strong> Us</h4>
            </div>
            <div class="col-sm-3 animation-fadeIn">
                <a href="javascript:void(0)" class="circle themed-background">
                    <i class="fa fa-comments"></i>
                </a>
                <h4><strong>Chat</strong> Live</h4>
            </div>
            <div class="col-sm-3 animation-fadeIn">
                <a href="javascript:void(0)" class="circle themed-background">
                    <i class="fa fa-twitter"></i>
                </a>
                <h4><strong>Tweet</strong> Us</h4>
            </div>
        </div>
    </div>
</section>