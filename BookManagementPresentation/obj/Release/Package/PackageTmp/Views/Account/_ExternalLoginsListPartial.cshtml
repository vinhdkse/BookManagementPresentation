@model BookManagementPresentation.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

<h4>Đăng nhập bằng các tài khoản xã hội</h4>
<hr />
@{
    var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    if (loginProviders.Count() == 0)
    {
        <div>
            <p>
                There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkId=403804">this article</a>
                for details on setting up this ASP.NET application to support logging in via external services.
            </p>
        </div>
    }
    else
    {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            <div id="socialLoginList">
                <p>
                    @foreach (AuthenticationDescription p in loginProviders)
                    {
                        if (p.AuthenticationType == "Google")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-google" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-google-plus-square"></span>Sign in with Google</button>
                        }
                        else if (p.AuthenticationType == "Facebook")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-facebook" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-facebook-square"></span>Sign in with Facebook</button>

                        }
                        else if (p.AuthenticationType == "Microsoft")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-microsoft" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-windows"></span>Sign in with Microsoft</button>
                        }
                        else if (p.AuthenticationType == "Yahoo")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-yahoo" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-yahoo"></span>Sign in with Yahoo</button>
                        }
                        else if (p.AuthenticationType == "LinkedIn")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-linkedin" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-linkedin-square"></span>Sign in with LinkedIn</button>
                        }
                        else if (p.AuthenticationType == "Instagram")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-instagram" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-instagram"></span>Sign in with Instagram</button>
                        }
                        else if (p.AuthenticationType == "Twitch")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-info" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-info-circle"></span>Sign in with Twitch</button>
                        }
                        else if (p.AuthenticationType == "GitHub")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-github" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-github-square"></span>Sign in with Github</button>
                        }
                        else if (p.AuthenticationType == "Twitter")
                        {
                            <button type="submit" class="btn btn-block btn-social btn-twitter" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-twitter-square"></span>Sign in with Twitter</button>

                        }
                        else
                        {
                            <button type="submit" class="btn btn-block btn-social btn-vk" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><span class="fa fa-vk"></span>Sign in with VK</button>
                        }
                    }
                </p>
            </div>
        }
    }
}
