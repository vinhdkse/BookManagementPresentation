                                    }
                                    else
                                    {
                                        <img src="~/@Session["Image"]" alt="avatar">
                                    }
                                </a>
                            </div>
                            <div class="sidebar-user-name">Admin</div>
                            <div class="sidebar-user-links">
                                <a href="/Account/LogOut" data-toggle="tooltip" data-placement="bottom" title="Logout"><i class="gi gi-exit"></i></a>
                            </div>
                        </div>
                        <!-- END User Info -->
                        <!-- Theme Colors -->
