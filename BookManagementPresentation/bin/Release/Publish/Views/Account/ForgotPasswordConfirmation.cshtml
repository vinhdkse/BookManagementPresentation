@{
    ViewBag.Title = "Forgot Password Confirmation";
}


<section class="site-section site-section-light site-section-top themed-background-dark">
    <div class="container">
        <h1 class="text-center animation-slideDown"><i class="fa fa-plus"></i> <strong>Quên mật khẩu</strong></h1>
        <h2 class="h3 text-center animation-slideUp">Bạn lỡ quên mất tiêu mật khẩu, đừng lo lắng!</h2>
    </div>
</section>
<section class="site-content site-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-sm-offset-12 col-lg-4 col-lg-offset-4 site-block">
                <!-- Sign Up Form -->
                <h2 class="text-success">
                    Hãy kiểm tra Email của bạn!! Nhấn vào <a href="/Account/Login" class="btn btn-success">Đây</a> để quay về trang Đăng nhập
                </h2>
                <!-- END Sign Up Form -->
            </div>
        </div>
    </div>
</section>
<section class="site-content site-section themed-background">
    <div class="container">
        <!-- Stats Row -->
        <!-- CountTo (initialized in js/app.js), for more examples you can check out https://github.com/mhuggins/jquery-countTo -->
        <div class="row" id="counters">
            <div class="col-sm-6 col-md-3">
                <div class="counter site-block">
                    <span data-toggle="countTo" data-to="6800" data-after="+"></span>
                    <small>Quyển sách</small>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="counter site-block">
                    <span data-toggle="countTo" data-to="5500" data-after="+"></span>
                    <small>Khác hàng thân thiện</small>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="counter site-block">
                    <span data-toggle="countTo" data-to="12362"></span>
                    <small>Lượt mua</small>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="counter site-block">
                    <span data-toggle="countTo" data-to="2150"></span>
                    <small>Ngày tuyệt vời</small>
                </div>
            </div>
        </div>
        <!-- END Stats Row -->
    </div>
</section>

