

@{
    ViewBag.Title = "LoadSachTheoDanhMucVaTacGia";
}
<!-- ajax -->
<section class="site-section site-section-light site-section-top themed-background-dark">
    <div class="container text-center">
        <h1 class="animation-slideDown"><strong>Hơn 5000 Quyển Sách!</strong></h1>
    </div>
</section>
<!-- END Intro -->
<!-- Product List -->
<section class="site-content site-section">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4 col-lg-3">
                <aside class="sidebar site-block">
                    <!-- Store Menu -->
                    <!-- Store Menu functionality is initialized in js/app.js -->
                    @Html.Action("LoadDanhMucSach", "Home")
                    <!-- Shopping Cart -->
                    @Html.Action("GioHangPartial", "GioHang")
                    <!-- END Shopping Cart -->
                </aside>
            </div>
            <!-- END Sidebar -->
            <!-- Products -->
            <div class="col-md-8 col-lg-9">
                <div class="form-inline push-bit clearfix">
                    <select id="results-sort" name="results-sort" class="form-control" size="1">
                        <option value="0" disabled selected>SORT BY</option>
                        <option value="1">Popularity</option>
                        <option value="2">Name (A to Z)</option>
                        <option value="3">Name (Z to A)</option>
                        <option value="4">Price (Lowest to Highest)</option>
                        <option value="5">Price (Highest to Lowest)</option>
                    </select>
                </div>
                <div class="row store-items" id="TacGia">
                    @Html.Action("TacGiaPartial","Home");
                </div>
            </div>
            <!-- END Products -->
        </div>
    </div>
</section>
