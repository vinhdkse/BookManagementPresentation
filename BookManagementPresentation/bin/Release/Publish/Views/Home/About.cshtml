@{
    ViewBag.Title = "About";
}
<div class="media-container">
    <!-- Intro -->
    <section class="site-section site-section-light site-section-top">
        <div class="container">
            <h1 class="text-center animation-slideDown"><i class="fa fa-building-o"></i> <strong>Tiệm sách của chúng tôi</strong></h1>
            <h2 class="h3 text-center animation-slideUp"><strong>Phục vụ khách hàng nhiệt tình!</strong></h2>
        </div>
    </section>
    <!-- END Intro -->
    <!-- Gmaps.js (initialized in js/pages/about.js), for more examples you can check out http://hpneo.github.io/gmaps/examples.html -->
